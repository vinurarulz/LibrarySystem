            <Image x:Name="image5" Height="90" Width="71" Source="pictures/appbar.user.add.png" Margin="1,-30,1,1"/>
        </Controls:Tile>
        <Controls:Tile Title="Change Password" 
                    TiltFactor="4"
                    Width="120" Height="120" 
                    Count="" Margin="280,10,953.6,602.8"
                       Background="Maroon" Click="Tile_Click_2">
            <Image x:Name="image6" Height="90" Width="71" Source="pictures/appbar.lock.png" Margin="1,-30,1,1"/>
