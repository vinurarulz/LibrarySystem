        BorderThickness="3"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Icon="books.ico">
    <Grid>
        <Controls:Tile Title="User Registration" 
                    TiltFactor="4"
                    Width="120" Height="120" 
                    Count="" Margin="10,10,1223.6,602.8"
                       Background="Orange" Click="Tile_Click">
            <Image x:Name="image2" Height="90" Width="71" Source="pictures/appbar.people.png" Margin="1,-30,1,1"/>
        </Controls:Tile>
        <Controls:Tile Title="Employee Registration" 
                    TiltFactor="4"
                    Width="120" Height="Auto" 
                    Count="" Margin="826,10,406,578"
                       Background="Blue" Click="Tile_Click_4">
            <Image x:Name="image1" Height="90" Width="71" Source="pictures/appbar.page.add.png" Margin="1,-30,1,1"/>
        </Controls:Tile>
        <Controls:Tile Title="Book Registration" 
                    TiltFactor="4"
                    Width="120" Height="Auto" 
                    Count="" Margin="690,10,542,578"
