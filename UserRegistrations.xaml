                    <TextBox x:Name="txt_add1" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="245" Margin="46.4,243,0,0" Grid.Column="1"/>
                    <TextBox x:Name="textBox_Copy7" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="245" Margin="46.4,212,0,0" Grid.Column="1"/>
                    <TextBox x:Name="txt_contac" HorizontalAlignment="Left" Height="24" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="245" Margin="46,146,0,0" Grid.Column="1"/>
                    <TextBox x:Name="txt_emp_name" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="&#xA;" VerticalAlignment="Top" Width="245" Margin="46,115,0,0" Grid.Column="1"/>
                    <ComboBox x:Name="combo_status" HorizontalAlignment="Left" Margin="46.4,339,0,0" VerticalAlignment="Top" Width="245" Height="22" ToolTip="" Grid.Column="1"/>
                    <Button x:Name="btn_search" Content="Search" HorizontalAlignment="Left" Margin="311.4,111,0,0" VerticalAlignment="Top" Width="52" Height="27" Grid.Column="1" RenderTransformOrigin="1.99,0.403"/>
                    <Label x:Name="title" Content="User Details" HorizontalAlignment="Left" Margin="46.4,10,0,0" VerticalAlignment="Top" Width="252" Height="52"  HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" FontSize="24" Grid.Column="1"/>
