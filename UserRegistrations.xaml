                        <TextBox x:Name="txt_rf_name" HorizontalAlignment="Left" Height="23" Margin="21.4,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                        <TextBox x:Name="txt_rf_add2" HorizontalAlignment="Left" Height="23" Margin="21.4,187,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                        <TextBox x:Name="txt_rf_add1" HorizontalAlignment="Left" Height="23" Margin="21.4,156,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                        <TextBox x:Name="txt_rf_email" HorizontalAlignment="Left" Height="23" Margin="21.4,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                        <TextBox x:Name="txt_rf_contac" HorizontalAlignment="Left" Height="23" Margin="21.4,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                        <TextBox x:Name="txt_rf_position" HorizontalAlignment="Left" Height="23" Margin="21.4,58,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                        <TextBox x:Name="txt_rf_add3" HorizontalAlignment="Left" Height="23" Margin="21.4,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="281" Grid.Column="3"/>
                    </Grid>
                    <Label x:Name="title_Copy" Content="Refree Details" HorizontalAlignment="Left" Margin="41.6,25,0,0" VerticalAlignment="Top" Width="252" Height="52"  HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" FontSize="24" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>
        <DataGrid x:Name="dataGrid1" Margin="521,30,0,0" VerticalAlignment="Top" Height="445" HorizontalAlignment="Left" Width="811"/>
    </Grid>
</Window>
