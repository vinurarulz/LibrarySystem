                    <Grid Background="#FFE5E5E5" Grid.ColumnSpan="2" Margin="10,82,0.2,-71">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="12*"/>
                            <ColumnDefinition Width="15*"/>
                            <ColumnDefinition Width="71*"/>
                            <ColumnDefinition Width="273*"/>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label_Copy10" Content="Refree Name" HorizontalAlignment="Left" Margin="10,21,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="4"/>
                        <Label x:Name="label_Copy11" Content="Position" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="3"/>
                        <Label x:Name="label_Copy12" Content="Contact no" HorizontalAlignment="Left" Margin="10,88,0,0" VerticalAlignment="Top" Width="94" Grid.ColumnSpan="3"/>
