                    <Label x:Name="label1_Copy3" Content="Address 1" HorizontalAlignment="Left" Margin="0,145,0,0" VerticalAlignment="Top" Width="73" Grid.ColumnSpan="2" Height="26"/>
                    <Label x:Name="label1_Copy4" Content="Email" HorizontalAlignment="Left" Margin="0,114,0,0" VerticalAlignment="Top" Width="73" Grid.ColumnSpan="2" Height="26"/>
